{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["./scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
