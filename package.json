{
    "name": "notion-sync",
    "version": "1.0.0",
    "description": "Automatically backup your Notion workspace to GitHub",
    "type": "module",
    "scripts": {
        "sync": "tsx src/index.ts",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@notionhq/client": "^5.8.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^20.11.0",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint": "^9.39.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.18"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
