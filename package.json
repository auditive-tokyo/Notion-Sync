{
    "name": "notion-vscode",
    "version": "1.0.0",
    "description": "Bi-directional sync between Notion and VS Code",
    "type": "module",
    "scripts": {
        "pull": "tsx '.github/scripts/notion->vscode/index.ts'",
        "push": "tsx '.github/scripts/github->notion/index.ts'",
        "typecheck": "tsc --noEmit --project .github/tsconfig.json",
        "lint": "eslint .github/scripts --config .github/eslint.config.js",
        "test": "vitest --config .github/vitest.config.ts",
        "test:run": "vitest run --config .github/vitest.config.ts",
        "test:coverage": "vitest run --config .github/vitest.config.ts --coverage"
    },
    "dependencies": {
        "@notionhq/client": "^5.8.0",
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^20.11.0",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint": "^9.39.2",
        "msw": "^2.12.7",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.18"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}